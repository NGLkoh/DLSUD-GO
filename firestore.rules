rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - authenticated users can read/write their own document
    match /users/{userId} {
      // Allow user to read and write their own document
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow admins to read and write any user document
      allow read, write: if isAdmin();
    }
    
    // Feedback collection - authenticated users can create feedback, admins can do everything
    match /feedback/{feedbackId} {
      // Allow authenticated users to create feedback
      allow create: if isAuthenticated();
      
      // Allow admins to read, update, and delete feedback
      allow read, update, delete: if isAdmin();
      
      // Allow admins to list all feedback (for queries)
      allow list: if isAdmin();
    }

    // Dashboard Sections collection - admins can do everything
    match /dashboard_sections/{sectionId} {
      allow read, write, create, update, delete: if isAdmin();
    }
    
    // Default rule: Deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
